{
  "if": {
    "field": "type",
    "equals": "Microsoft.Sql/servers"
  },
  "then": {
    "effect": "deployIfNotExists",
    "details": {
      "type": "Microsoft.Sql/servers/auditingSettings",
      "name": "Default",
      "existenceCondition": {
        "allOf": [
          {
            "field": "Microsoft.Sql/servers/auditingSettings/state",
            "equals": "Enabled"
          },
          {
            "field": "Microsoft.Sql/servers/auditingSettings/isAzureMonitorTargetEnabled",
            "equals": "false"
          }
        ]
      },
      "roleDefinitionIds": [
        "${roleDefinitionIds_sql_security_manager}",
        "${roleDefinitionIds_log_analytics_contributor}"
      ],
      "deployment": {
        "properties": {
          "mode": "incremental",
          "template": {
            "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
            "contentVersion": "1.0.0.0",
            "parameters": {
              "diagnosticsSettingName": {
                "type": "string"
              },
              "resourceName": {
                "type": "string"
              },
              "logAnalytics": {
                "type": "string"
              }
            },
            "variables": {},
            "resources": [
              {
                "type": "Microsoft.Sql/servers/databases/providers/diagnosticSettings",
                "name": "[concat(parameters('resourceName'),'/master/microsoft.insights/',parameters('diagnosticsSettingName'))]",
                "apiVersion": "2021-05-01-preview",
                "properties": {
                  "name": "[parameters('diagnosticsSettingName')]",
                  "workspaceId": "[parameters('logAnalytics')]",
                  "logs": [
                    {
                      "categoryGroup": "audit",
                      "enabled": true
                    }
                  ]
                }
              },
              {
                "name": "[concat(parameters('resourceName'), '/Default')]",
                "type": "Microsoft.Sql/servers/auditingSettings",
                "apiVersion": "2023-02-01-preview",
                "dependsOn": [
                  "[concat('Microsoft.Sql/servers/', parameters('resourceName'),'/databases/master/providers/microsoft.insights/diagnosticSettings/', parameters('diagnosticsSettingName'))]"
                ],
                "properties": {
                  "state": "Enabled",
                  "isAzureMonitorTargetEnabled": true
                }
              },
              {
                "name": "[concat(parameters('resourceName'), '/Default')]",
                "type": "Microsoft.Sql/servers/devOpsAuditingSettings",
                "apiVersion": "2023-02-01-preview",
                "dependsOn": [
                  "[concat('Microsoft.Sql/servers/', parameters('resourceName'),'/databases/master/providers/microsoft.insights/diagnosticSettings/', parameters('diagnosticsSettingName'))]"
                ],
                "properties": {
                  "state": "Enabled",
                  "isAzureMonitorTargetEnabled": true
                }
              }
            ]
          },
          "parameters": {
            "diagnosticsSettingName": {
              "value": "[parameters('diagnosticsSettingName')]"
            },
            "resourceName": {
              "value": "[field('name')]"
            },
            "logAnalytics": {
              "value": "[parameters('logAnalytics')]"
            }
          }
        }
      }
    }
  }
}
